rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user is admin
    // Checks both custom claims and Firestore admin collection
    function isAdmin() {
      return isAuthenticated() && (
        request.auth.token.admin == true ||
        exists(/databases/$(database)/documents/admins/$(request.auth.uid))
      );
    }

    match /users/{userId} {

      // Admin access - full read/write
      allow read, write: if isAdmin();

      // Regular user access
      allow get: if isAuthenticated() && request.auth.uid == userId;
      allow list: if isAuthenticated();
      allow create: if isAuthenticated()
        && request.auth.uid == userId;
      allow update: if isAuthenticated()
        && request.auth.uid == userId;
      allow delete: if isAuthenticated()
        && request.auth.uid == userId;

      // User preferences subcollection
      match /preferences/{preferenceId} {
        allow read: if isAuthenticated() && request.auth.uid == userId;
        allow write: if isAuthenticated() && request.auth.uid == userId;
      }
    }

    match /messages/{messageId} {
      // Admin can read all messages
      allow read: if isAdmin();
      // Regular users can read/write
      allow read, write: if isAuthenticated();
    }
    
    // Nested structure: messages/{userId}/chats/{messageId}
    match /messages/{userId} {
      // Allow access to user's message document if they own it
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
      
      // Allow access to chat messages subcollection
      match /chats/{messageId} {
        allow read, write: if isAuthenticated() && request.auth.uid == userId;
      }
    }

    // Chat sessions
    match /chat_sessions/{sessionId} {
      allow read, write: if isAuthenticated()
        && (resource.data.userId == request.auth.uid
            || request.resource.data.userId == request.auth.uid);
    }

    // Subscriptions
    match /subscriptions/{subscriptionId} {
      // Admin access - full read/write
      allow read, write: if isAdmin();
      
      // Regular user access
      allow read, write: if isAuthenticated()
        && (resource.data.userId == request.auth.uid
            || request.resource.data.userId == request.auth.uid);
    }

    // User preferences
    match /user_preferences/{preferenceId} {
      allow read, write: if isAuthenticated()
        && (resource.data.userId == request.auth.uid
            || request.resource.data.userId == request.auth.uid);
    }

    // Daily suggestions
    match /daily_suggestions/{suggestionId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin(); // Admins can write
    }

    // Admin collection
    match /admins/{adminId} {
      // Only admins can read admin collection
      allow read: if isAdmin();
      // Only admins can write (for creating new admins)
      allow write: if isAdmin();
    }

    // Deny everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
